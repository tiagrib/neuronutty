{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "NNutty",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [ ]
        },
        {
            "name": "TrainDaemon",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "args": [ "train_daemon", "--watch-path", "z:/jobs" ]
        },
        {
            "name": "Compute Means",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "args": [ "means", "--models-path", "z:/models" ]
        },
        {
            "name": "Datasets Info",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "args": [ "dataset_info", "--datasets-path", "z:/preprocessed" ]
        },
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [   "train",
                        "--save-model-path", "z:/models",
                        "--preprocessed-path", "C:/repo/shared/preprocessed/AMASS_Transition",
                        "--epochs", "100", 
                        "--device", "cuda", 
                        "--save-model-frequency", "5", 
                        "--architecture", "seq2seq",
                        "--batch-size", "4096",
                        "--num-heads", "4",
                        "--hidden-dim", "1024",
                        "--lr", "0.001",
                        "--representation", "aa",
                        "--transitional"
                    ]        
        },
        {
            "name": "Preprocess",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [   "preprocess",
                        "--input-dir", "C:/repo/shared/mocap/AMASS/Synthetic_60FPS/AMASS_Transition", 
                        "--output-dir", "C:/repo/shared/preprocessed/AMASS_Transition", 
                        "--rep", "aa",
                        "--split-dir", "C:/repo/shared/mocap/AMASS/Synthetic_60FPS_fnames",
                        "--transitional",
                        "--src-len", "5",
                        "--tgt-len", "5",
                        "--num-cpus", "1",
                        "--window-size", "30",
                        "--window-stride", "30",
                    ]        
        }
    ]
}

